{
	"name": "nahid-dev",
	"private": true,
	"description": "My personal website built with ReactJS and GatsbyJS",
	"version": "2.0.0",
	"author": "Nahid Ferdous Mohit <hello@nahid.dev>",
	"prettier": "prettier-config-nahid",
	"dependencies": {
		"gatsby": "^2.24.64",
		"gatsby-image": "^2.4.19",
		"gatsby-plugin-manifest": "^2.4.31",
		"gatsby-plugin-offline": "^3.2.28",
		"gatsby-plugin-react-helmet": "^3.3.11",
		"gatsby-plugin-sass": "^2.3.13",
		"gatsby-plugin-sharp": "^2.6.36",
		"gatsby-source-filesystem": "^2.3.30",
		"gatsby-transformer-sharp": "^2.5.15",
		"node-sass": "^4.14.1",
		"normalize.css": "^8.0.1",
		"prop-types": "^15.7.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-helmet": "^6.1.0"
	},
	"devDependencies": {
		"@wordpress/eslint-plugin": "^5.1.0",
		"@wordpress/prettier-config": "^0.2.0",
		"concurrently": "^5.3.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-nahid": "^1.0.5",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.0",
		"eslint-plugin-react-hooks": "^4.1.2",
		"husky": "^4.3.0",
		"lint-staged": "^10.4.0",
		"prettier": "npm:wp-prettier@^1.19.1",
		"prettier-config-nahid": "^1.0.1",
		"stylelint": "^13.7.1",
		"stylelint-config-nahid": "^1.0.6",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-sass-guidelines": "^7.1.0",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-config-wordpress": "^16.0.0",
		"stylelint-prettier": "^1.1.2",
		"stylelint-scss": "^3.18.0"
	},
	"keywords": [
		"gatsby",
		"personal",
		"blog"
	],
	"license": "MIT",
	"scripts": {
		"build": "gatsby build",
		"develop": "gatsby develop",
		"start": "npm run develop",
		"serve": "gatsby serve",
		"clean": "gatsby clean",
		"test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
		"lint": "concurrently \"npm run lint-js\" \"npm run lint-css\" \"npm run format\"",
		"lint:fix": "concurrently \"npm run lint-js:fix\" \"npm run lint-css:fix\" \"npm run format:fix\"",
		"lint-js": "eslint \"**/*.js\"",
		"lint-js:fix": "eslint \"**/*.js\" --fix",
		"lint-css": "stylelint \"**/*.{css,scss,sass}\"",
		"lint-css:fix": "stylelint \"**/*.{css,scss,sass}\" --fix",
		"format": "prettier --check \"**/*.{html,json,md}\"",
		"format:fix": "prettier --write \"**/*.{html,json,md}\""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nfmohit-wpmudev/nahid.dev"
	},
	"bugs": {
		"url": "https://github.com/nfmohit-wpmudev/nahid.dev/issues"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": "eslint --fix",
		"*.{css,scss,sass}": "stylelint --fix",
		"*.{html,json,md}": "prettier --write"
	}
}
